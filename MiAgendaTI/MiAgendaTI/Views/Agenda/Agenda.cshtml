@using MiAgendaTI.Models.ViewModels
@model AgendaViewModel

@{
    Layout = null;
    ViewData["Title"] = "Mis Contactos";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Contactos</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>
<body>
    <div class="container mt-4">
        <div class="row">
            <div class="col-12">

                <div class="align-items-center mb-4">
                    <h1 class="display-6"></h1>
                    <a asp-action="Crear" class="btn btn-success">Crear nuevo contacto</a>
                </div>

                <p class="text-muted">Tienes **@Model.TotalContactos** contactos almacenados</p>
            </div>
        </div>

        <div class="col-md-12 text-end d-flex justify-content-end align-items-center">
            <span class="fw-bold me-2">Agenda TI</span>
            <img src="~/images/perfil_dev.png" alt="Perfil del desarrollador" class="rounded-circle" width="50" height="50">
            <button class="btn btn-sm btn-danger ms-2">X</button>
        </div>

        <div class="row mb-4 align-items-center">
            <nav class="navbar navbar-light bg-light">
                <div class="container-fluid">
                    <br />
                    <form asp-action="Index" method="get" class="input-group">
                        <input type="text" asp-for="TerminoBusqueda" class="form-control me-2" type="search" placeholder="Buscar por nombre, teléfono, etc." aria-label="Search">
                        <button class="btn btn-outline-success" type="submit">Buscador</button>
                    </form>
                </div>
            </nav>

        </div>

        <h2 class="h4 mt-5 mb-3 border-bottom pb-2">Lista Contactos</h2>

        @if (Model.Contactos != null && Model.Contactos.Any())
        {
            @foreach (var contacto in Model.Contactos)
            {
                <div class="card mb-3 shadow-sm">
                    <div class="card-body d-flex">

                        <div class="me-4 text-center border-end pe-4">
                            @*        <img src="@contacto.ImagenUrl" alt="@contacto.NombreCompleto" class="img-thumbnail rounded-circle mb-2" style="width: 90px; height: 90px;"> *@
                            <h5 class="card-title mb-0">@contacto.NombreCompleto</h5>
                        </div>

                        <div class="flex-grow-1 ps-4">
                            <div class="row">
                                <div class="col-md-6">
                                    <p class="mb-1"><strong>Edad:</strong> @contacto.Edad</p>
                                    <p class="mb-1"><strong>Teléfono:</strong> @contacto.Telefono</p>
                                </div>
                                @foreach (var red in contacto.RedesSociales)
                                {
                                    <p class="mb-1">
                                        <h5>Red Social:</h5>
                                        <a href="@red.URL" target="_blank">@red.URL</a>
                                    </p>
                                }
                            </div>
                        </div>

                        <div class="ms-auto text-end d-flex flex-column justify-content-between">
                            @* Si contacto.EsCumpleaños *@
                            @if (contacto.Edad == 30)
                            {
                                <img src="~/images/birthday-cake.png" alt="Cumpleaños" width="35" class="align-self-end mb-2">
                            }

                            <div class="btn-group-vertical mt-auto">
                                <a asp-action="Editar" asp-route-id="@contacto.ContactoId" class="btn btn-sm btn-outline-secondary">Editar</a>
                                <a asp-action="Eliminar" asp-route-id="@contacto.ContactoId" class="btn btn-sm btn-outline-danger mt-1">Eliminar</a>
                                <a asp-action="EditarRedes" asp-route-id="@contacto.ContactoId" class="btn btn-sm btn-outline-primary mt-1">Editar Contactos</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12">
                <p class="alert alert-info">No se encontraron contactos para mostrar. ¡Es hora de agregar uno!</p>
            </div>
        }

        <div class="d-grid gap-2">
            <button type="button" class="btn btn-dark btn-lg">Salir</button>
        </div>

    </div>
</body>
</html>